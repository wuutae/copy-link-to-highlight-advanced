{
  "manifest_version": 3,
  "name": "Copy link to highlight Advanced",
  "description": "Copy link to highlight with shortcut and customizable formats.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/prepare.js",
        "scripts/fragment-generation-utils.js",
        "scripts/content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "contextMenus",
    "clipboardWrite"
  ],
  "commands": {
    "copy-format-1": {
      "suggested_key": {
        "default": "Alt+1"
      },
      "description": "Copy highlight to clipboard with format 1",
      "global": true
    },
    "copy-format-2": {
      "suggested_key": {
        "default": "Alt+2"
      },
      "description": "Copy highlight to clipboard with format 2",
      "global": true
    },
    "copy-format-3": {
      "suggested_key": {
        "default": "Alt+3"
      },
      "description": "Copy highlight to clipboard with format 3",
      "global": true
    },
    "copy-format-4": {
      "suggested_key": {
        "default": "Alt+4"
      },
      "description": "Copy highlight to clipboard with format 4",
      "global": true
    }
  }
}
